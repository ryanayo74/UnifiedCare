<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select available time"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ImageButton for Monday -->
        <ImageButton
            android:id="@+id/mon"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/mone_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="7AM"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/mon"
            app:layout_constraintEnd_toEndOf="@id/mon"
            app:layout_constraintStart_toStartOf="@id/mon"
            app:layout_constraintTop_toTopOf="@id/mon" />

        <!-- ImageButton for Tuesday -->
        <ImageButton
            android:id="@+id/tue"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintStart_toEndOf="@id/mon"
            app:layout_constraintHorizontal_bias="0.339" />

        <TextView
            android:id="@+id/tue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="10AM"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tue"
            app:layout_constraintEnd_toEndOf="@id/tue"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/tue"
            app:layout_constraintTop_toTopOf="@id/tue"
            app:layout_constraintVertical_bias="0.507" />

        <!-- ImageButton for Wednesday -->
        <ImageButton
            android:id="@+id/wed"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintStart_toEndOf="@id/tue"
            app:layout_constraintHorizontal_bias="0.131"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/wed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="1PM"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/wed"
            app:layout_constraintEnd_toEndOf="@id/wed"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/wed"
            app:layout_constraintTop_toTopOf="@id/wed"
            app:layout_constraintVertical_bias="0.507" />

        <!-- ImageButton for Thursday -->
        <ImageButton
            android:id="@+id/thur"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintStart_toEndOf="@id/wed"
            app:layout_constraintHorizontal_bias="0.0"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/thur_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="3PM"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/thur"
            app:layout_constraintEnd_toEndOf="@id/thur"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/thur"
            app:layout_constraintTop_toTopOf="@id/thur"
            app:layout_constraintVertical_bias="0.507" />

        <!-- Select Button -->

        <!-- Back Button -->

        <Button
            android:id="@+id/select_btn"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/black"
            android:padding="15dp"
            android:text="Select"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thur_txt"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/black"
            android:padding="15dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wed"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
