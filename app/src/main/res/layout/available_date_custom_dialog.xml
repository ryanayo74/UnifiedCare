<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="378dp"
        android:layout_height="343dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select available date"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079" />

        <TextView
            android:id="@+id/mon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="MON"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/mon"
            app:layout_constraintEnd_toEndOf="@id/mon"
            app:layout_constraintStart_toStartOf="@id/mon"
            app:layout_constraintTop_toTopOf="@id/mon" />

        <TextView
            android:id="@+id/tue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="TUE"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tue"
            app:layout_constraintEnd_toEndOf="@id/tue"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/tue"
            app:layout_constraintTop_toTopOf="@id/tue"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/wed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="WED"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/wed"
            app:layout_constraintEnd_toEndOf="@id/wed"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/wed"
            app:layout_constraintTop_toTopOf="@id/wed"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/thur_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="THUR"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/thur"
            app:layout_constraintEnd_toEndOf="@id/thur"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/thur"
            app:layout_constraintTop_toTopOf="@id/thur"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/fri_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="FRI"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/fri"
            app:layout_constraintEnd_toEndOf="@id/fri"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/fri"
            app:layout_constraintTop_toTopOf="@id/fri"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/sat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="SAT"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/sat"
            app:layout_constraintEnd_toEndOf="@id/sat"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/sat"
            app:layout_constraintTop_toTopOf="@id/sat"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/sun_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="SUN"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/sun"
            app:layout_constraintEnd_toEndOf="@id/sun"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@id/sun"
            app:layout_constraintTop_toTopOf="@id/sun"
            app:layout_constraintVertical_bias="0.507" />

        <ImageButton
            android:id="@+id/wed"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:layout_marginStart="168dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/gray" />

        <ImageButton
            android:id="@+id/thur"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_marginStart="270dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/sat"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.602"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/sun"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:layout_marginStart="56dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.814"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mon"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/tue"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.339"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/fri"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mon"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mon"
            android:layout_width="96dp"
            android:layout_height="89dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitle"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/gray" />

        <Button
            android:id="@+id/select_btn"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/black"
            android:padding="15dp"
            android:text="Select"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/black"
            android:padding="15dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>